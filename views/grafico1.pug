extends layout

block content
  h1 Dashboard
  section.css-table
    section.two-column
      section.cell
        hr.grey
        h2 Statistics
        #mainGraph
            script(type="text/javascript")
              var d3 = require("d3");			
              var Canvas = require("canvas");
              var sampleSVG = d3.select("#mainGraph")
                .append("svg")
                .attr("width", 100)
                .attr("height", 100);    
              sampleSVG.append("circle")
                .style("stroke", "gray")
                .style("fill", "white")
                .attr("r", 40)
                .attr("cx", 50)
                .attr("cy", 50)
                .on("mouseover", function(){d3.select(this).style("fill", "aliceblue");})
                .on("mouseout", function(){d3.select(this).style("fill", "white");});
      section.cell
        hr.grey
        h2 Achievements